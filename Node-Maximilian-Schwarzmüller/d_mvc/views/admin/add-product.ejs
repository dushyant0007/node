<%- include('../components/head.ejs') %>
    <link rel="stylesheet" href="/css/form.css">
    </head>

    <body>

        <%- include('../components/navigation.ejs') %>

            <main>
                <form class="add-product-form" action="/admin/add-product" method="post">

                    <div class="form-inputs-and-labels">
                        <label for="input-title">Title</label>
                        <input type="text" name="title" id="input-title">
                    </div>

                    <div class="form-inputs-and-labels">
                        <label for="input-image-url">Image URL</label>
                        <input type="url" name="imageUrl" id="input-image-url">
                    </div>

                    <div class="form-inputs-and-labels">
                        <label for="input-price">Price</label>
                        <input type="number" name="price" id="input-price">
                    </div>

                    <div class="form-inputs-and-labels">
                        <label for="input-description">Description</label>
                        <textarea name="description" rows="5"></textarea>
                    </div>
                    
                    <button type="submit">Add Product</button>
                </form>
            </main>

            <%- include('../components/end.ejs') %>