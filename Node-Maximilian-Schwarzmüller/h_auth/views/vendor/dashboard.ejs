<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Enhanced Design</title>
    <link rel="stylesheet" href="/css/vendor/dashboard.css">
</head>

<body>
    <h1>Service Management</h1>

    <form action="/vendor/dashboard/add-new-service" method="post">
        <fieldset>
            <legend>Add New Service</legend>
            <label for="serviceType">Select Service Type</label>
            <select id="serviceType" name="serviceType">
                <option value="photographer">Photographer</option>
                <option value="videographer">Videographer</option>
            </select>
            <button type="submit">Add Service</button>
        </fieldset>
    </form>

    <fieldset>
        <legend>Your Services</legend>
        <% if (services.length===0) { %>
            <h3>You have no services yet</h3>
            <% } else { %>
                <% for (const service of services) { %>
                    <div>
                        <h3><%= service.serviceType %></h3>
                        <a href="/vendor/dashboard/edit-service/<%= service._id %>">Edit Service</a>
                        <a href="/vendor/dashboard/edit-albums/<%= service._id %>">Edit Service Album</a>
                    </div>
                    
                    <% } %>
                        <% } %>
    </fieldset>
</body>

</html>